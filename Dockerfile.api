# Base image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential curl git \
    && rm -rf /var/lib/apt/lists/*

# Copy dependencies
COPY requirements.txt pyproject.toml ./

# Install Python dependencies â€” with fix for starlette-prometheus
# Step 1: Force reinstall the correct version of starlette-prometheus
RUN pip install --no-cache-dir --force-reinstall "starlette-prometheus==0.10.0" --no-deps

# Step 2: Install all other packages (including the rest of requirements.txt)
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code and models
COPY src ./src
COPY models ./models
COPY config ./config

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PORT=8000 \
    MLFLOW_TRACKING_URI=http://mlflow:5000

# Expose API port
EXPOSE 8000

# Start API
CMD ["uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
